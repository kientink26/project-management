{
  "name": "task-board-service",
  "version": "1.0.0",
  "description": "Task board service",
  "scripts": {
    "setup": "cat .nvmrc | nvm install; nvm use",
    "build": "run-s lint build:ts",
    "build:ts": "tsc",
    "build:ts:watch": "tsc  --watch",
    "start": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "dev": "nodemon -r tsconfig-paths/register ./src/index.ts",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:prettier": "prettier --check \"**/**/!(*.d).{ts,json,md}\"",
    "lint:eslint": "eslint **/*.ts",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:prettier": "prettier --write \"**/**/!(*.d).{ts,json,md}\"",
    "fix:eslint": "eslint **/*.ts --fix"
  },
  "author": "Kien",
  "license": "MIT",
  "dependencies": {
    "@eventstore/db-client": "6.1.0",
    "express": "4.18.2",
    "mongodb": "6.3.0",
    "node-nats-streaming": "^0.3.2"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.10.6",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  }
}
